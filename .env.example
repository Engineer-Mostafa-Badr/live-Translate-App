# ========================================
# Environment Configuration (Placeholders)
# ========================================
# Copy this file to .env and replace with actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (Create these in Stripe Dashboard)
STRIPE_PRICE_ID_BASIC_MONTHLY=price_basic_monthly_placeholder
STRIPE_PRICE_ID_BASIC_YEARLY=price_basic_yearly_placeholder
STRIPE_PRICE_ID_PRO_MONTHLY=price_pro_monthly_placeholder
STRIPE_PRICE_ID_PRO_YEARLY=price_pro_yearly_placeholder
STRIPE_PRICE_ID_PREMIUM_MONTHLY=price_premium_monthly_placeholder
STRIPE_PRICE_ID_PREMIUM_YEARLY=price_premium_yearly_placeholder

# Firebase Configuration (Optional - if using Firebase)
FIREBASE_API_KEY=your_firebase_api_key_here
FIREBASE_APP_ID=your_firebase_app_id_here
FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
FIREBASE_PROJECT_ID=your_project_id_here

# Google Translate API (Optional - for online translation)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# App Configuration
APP_ENV=development
DEBUG_MODE=true
API_TIMEOUT=30000

# Feature Flags
ENABLE_OFFLINE_MODE=true
ENABLE_OCR=true
ENABLE_VOICE_TRANSLATION=true
ENABLE_ANALYTICS=false
